#!/bin/sh

# Prepare ------------------------------------------------------------------------------------------

main_color=2

info=$(gum style "[38;5;${main_color}mï€‡ [0;1;38;5;${main_color}m${USER}[0m@[1;38;5;${main_color}m$(hostname)[0m
[0;32mâ””â”€ [38;5;${main_color}mï’· [0m WSL
[0;32m   â”œâ”€ [38;5;${main_color}mî• [0m Windows Terminal
[0;32m   â”‚  â””â”€ [38;5;${main_color}mîˆ« [0m One Half Dark
[0;32m   â”œâ”€ [38;5;${main_color}mî™ [0m NixOS
[0;32m   â”‚  â””â”€ [38;5;${main_color}mï€— [0m $(uptime | sed -E 's/^[^,]*up *//; s/, *[[:digit:]]* user.*//; s/min/minutes/; s/([[:digit:]]+):0?([[:digit:]]+)/\1 hours, \2 minutes/')
[0;32m   â”œâ”€ [38;5;${main_color}mï…« [0m Nixpkgs
[0;32m   â”œâ”€ [38;5;${main_color}mï’‰ [0m fish
[0;32m   â”œâ”€ [38;5;${main_color}mï„ [0m neovim
[0;32m   â””â”€ [38;5;${main_color}mó±Œ£ [0m eza & zoxide")

art=$(gum style '       [32m&&[0m
      [32m&&&&&[0m
    [32m&&&[33m\/[32m& &&&[0m
   [32m&&[33m|,/  |/[32m& &&[0m
    [32m&&[33m/   /  /_[32m&  &&[0m
      [33m\  {  |_____/_[32m&[0m
      [33m{  / /          [32m&&&[0m
      [33m.`. \{___\________\/_\}[0m
       [33m\} \}\{       \[0m
       [33m}\{\{         \____[32m&[0m
      [33m\{\}\{           `[32m&[33m\[32m&&[0m
      [33m{{}             [32m&&[0m
[33m, -=-~{ .-^- _[0m
      [33m`.[0m')

color=$(gum style '[0;30mâ–ˆâ–ˆâ–ˆ[0;31mâ–ˆâ–ˆâ–ˆ[0;32mâ–ˆâ–ˆâ–ˆ[0;33mâ–ˆâ–ˆâ–ˆ[0;34mâ–ˆâ–ˆâ–ˆ[0;35mâ–ˆâ–ˆâ–ˆ[0;36mâ–ˆâ–ˆâ–ˆ[0;37mâ–ˆâ–ˆâ–ˆ[0m
[0;1;90mâ–ˆâ–ˆâ–ˆ[0;1;91mâ–ˆâ–ˆâ–ˆ[0;1;92mâ–ˆâ–ˆâ–ˆ[0;1;93mâ–ˆâ–ˆâ–ˆ[0;1;94mâ–ˆâ–ˆâ–ˆ[0;1;95mâ–ˆâ–ˆâ–ˆ[0;1;96mâ–ˆâ–ˆâ–ˆ[0;1;97mâ–ˆâ–ˆâ–ˆ[0m')

calendar=$(gum style --border thick --border-foreground "${main_color}" --padding '0 2' "
$(cal --color=always)")



# Display ------------------------------------------------------------------------------------------

terminal_size=$(stty size)
terminal_height=${terminal_size% *}
terminal_width=${terminal_size#* }

prompt_height=${PROMPT_HEIGHT:-1}

print_test() {
	no_color=$(printf '%b' "${1}" | sed -e 's/\x1B\[[0-9;]*[JKmsu]//g')

	[ "$(printf '%s' "${no_color}" | wc --lines)" -gt $(( terminal_height - prompt_height )) ] && return 1
	[ "$(printf '%s' "${no_color}" | wc --max-line-length)" -gt "${terminal_width}" ] && return 1

	gum style --align center --width="${terminal_width}" "${1}" ''
	printf '%b' "\033[A"

	exit 0
}

# Default layout
group_info_color=$(gum join --vertical --align center "${info}" '' "${color}")
print_test "$(gum join --horizontal --align center "${art}" '    ' "${group_info_color}" '    ' "${calendar}")"

# Other layout
print_test "$(gum join --horizontal --align center "${art}" '    ' "${info}")"
print_test "${group_info_color}"
print_test "${info}"

exit 1
